#include <stdio.h>
int main()
{
    int i=0;
    char key,s[1000];
    printf("Enter the string");
    scanf("%s",s);
    printf("Enter the character");
    scanf("%c",&key);
    while(s[i]!='\0')
    {
        if(s[i]==key)
        {
            printf("%d is the index of the first occurence of %c",i,key);
            break;
        }
        i++;
    }
    if(s[i]==key)
        printf("%c is not found in the given string",key);
    return 0;
}
